<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nisargpatel.memorycolor.GamePlayActivity"
    android:background="@drawable/bottom_black">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/corner_black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hello_world"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:id="@+id/buttonLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/blank"
            android:id="@+id/buttonPurple"
            android:onClick="buttonPurple"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corner_purple" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/blank"
            android:id="@+id/buttonBlue"
            android:onClick="buttonBlue"
            android:layout_alignBottom="@+id/buttonPurple"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="23dp"
            android:background="@drawable/corner_blue" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/blank"
            android:id="@+id/buttonCyan"
            android:onClick="buttonCyan"
            android:layout_below="@+id/buttonOrange"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/corner_cyan"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/blank"
            android:id="@+id/buttonYellow"
            android:onClick="buttonYellow"
            android:layout_above="@+id/buttonCyan"
            android:layout_alignLeft="@+id/buttonPurple"
            android:layout_alignStart="@+id/buttonPurple"
            android:background="@drawable/corner_yellow"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/blank"
            android:id="@+id/buttonOrange"
            android:onClick="buttonOrange"
            android:layout_above="@+id/buttonBlue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="51dp"
            android:background="@drawable/corner_orange" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/blank"
            android:id="@+id/buttonGreen"
            android:onClick="buttonGreen"
            android:layout_alignTop="@+id/buttonOrange"
            android:layout_alignLeft="@+id/buttonCyan"
            android:layout_alignStart="@+id/buttonCyan"
            android:background="@drawable/corner_green" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/blank"
            android:id="@+id/buttonRed"
            android:onClick="buttonRed"
            android:layout_above="@+id/buttonYellow"
            android:layout_alignLeft="@+id/buttonYellow"
            android:layout_alignStart="@+id/buttonYellow"
            android:layout_marginBottom="24dp"
            android:background="@drawable/corner_red" />
    </RelativeLayout>
</RelativeLayout>
