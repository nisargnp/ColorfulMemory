<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nisargpatel.memorycolor.SettingsActivity"
    android:id="@+id/layoutSettings"
    android:background="@drawable/roygbiv_light">

    <TextView android:text="@string/setting_vibration"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/textView2"
        android:layout_marginTop="104dp"
        android:background="@drawable/white"
        android:textSize="30sp"
        android:textColor="#FF050000"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="New ToggleButton"
        android:id="@+id/toggleButtonVibration"
        android:checked="false"
        android:background="@drawable/white"
        android:textSize="20sp"
        android:textColor="#96000000"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
